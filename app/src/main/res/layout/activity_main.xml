<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"><![CDATA[





    android:layout_marginTop="-50dp"
        android:layout_below="@id/bar_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">













    ]]>

    <ImageView
        android:id="@+id/bar_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_scan"
        android:adjustViewBounds="true"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="332dp" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:text="Data : "
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_code" />

    <Button
        android:id="@+id/button_scan"
        android:layout_width="416dp"
        android:layout_height="101dp"
        android:layout_below="@id/data_text"
        android:background="@color/colorPrimary"
        android:text="Scan Barcode"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bar_code" />

    <Button
        android:id="@+id/share_code"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/colorAccent"
        android:text="SHARE CODE"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="530dp" />


</androidx.constraintlayout.widget.ConstraintLayout>